		<phrase hz="省份" py="shěng,fèn" />
		<phrase hz="省略" py="shěng,lüè" />
		<phrase hz="省会" py="shěng,huì" duoyin="xǐng,huì" info="省政府所在地。" />
		<phrase hz="省事" py="shěng,shì" duoyin="xǐng,shì" info="1.減少辦事的手續。2.方便、不麻煩。" />
		<phrase hz="省心" py="shěng,xīn" info="不费心;少操心" />
